# GBNF Grammar for Device Control JSON Output
# Schema: {ResponseMessage: string, IsSuccess: boolean, Device: string|null, Property: string|null, Value: number|string|null}

root ::= object
object ::= "{" ws response-message-field "," ws is-success-field "," ws device-field "," ws property-field "," ws value-field "}" ws

response-message-field ::= "\"ResponseMessage\"" ws ":" ws string
is-success-field ::= "\"IsSuccess\"" ws ":" ws boolean
device-field ::= "\"Device\"" ws ":" ws nullable-string
property-field ::= "\"Property\"" ws ":" ws nullable-string
value-field ::= "\"Value\"" ws ":" ws nullable-value

nullable-string ::= string | null
nullable-value ::= string | number | null

string ::= "\"" ([^"\\\x7F\x00-\x1F] | "\\" (["\\bfnrt] | "u" [0-9a-fA-F] [0-9a-fA-F] [0-9a-fA-F] [0-9a-fA-F]))* "\""
number ::= ("-"? ([0-9] | [1-9] [0-9]*)) ("." [0-9]+)? ([eE] [-+]? [0-9]+)?
boolean ::= "true" | "false"
null ::= "null"
ws ::= [ \t\n]*
